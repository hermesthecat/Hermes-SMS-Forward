<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/description_text"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTargetLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/target_number_label"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescription" />

    <EditText
        android:id="@+id/etTargetNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/target_number_hint"
        android:inputType="phone"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/cd_target_number_input"
        android:importantForAccessibility="yes"
        android:accessibilityTraversalAfter="@id/tvTargetLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTargetLabel" />

    <TextView
        android:id="@+id/tvValidation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:textColor="@color/hermes_error"
        android:gravity="start"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        android:contentDescription="@string/cd_validation_message"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalAfter="@id/etTargetNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etTargetNumber" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/save_button"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/cd_save_button"
        android:importantForAccessibility="yes"
        android:accessibilityTraversalAfter="@id/etTargetNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvValidation" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/status_not_configured"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/cd_status_indicator"
        android:importantForAccessibility="yes"
        android:accessibilityLiveRegion="polite"
        android:accessibilityTraversalAfter="@id/btnSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSave" />

    <LinearLayout
        android:id="@+id/llPermissions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvStatus">

        <TextView
            android:id="@+id/tvPermissionsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/required_permissions_title"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/llReceiveSmsPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvReceiveSmsStatus"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:text="❌"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvReceiveSmsLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/receive_sms_permission_label"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSendSmsPermission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvSendSmsStatus"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:text="❌"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tvSendSmsLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/send_sms_permission_label"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>