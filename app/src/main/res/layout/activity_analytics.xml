<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hermes_background"
    tools:context=".AnalyticsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/analytics_dashboard_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/hermes_text_primary"
                android:contentDescription="@string/cd_app_logo"
                android:accessibilityHeading="true" />

            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/refresh_button"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/cd_refresh_button"
                android:importantForAccessibility="yes"
                style="@style/Widget.AppCompat.Button.Colored" />

            <Button
                android:id="@+id/btnExport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/export_button"
                android:contentDescription="@string/cd_export_button"
                android:importantForAccessibility="yes"
                style="@style/Widget.AppCompat.Button.Borderless.Colored" />

        </LinearLayout>

        <!-- Last Update Time -->
        <TextView
            android:id="@+id/tvLastUpdateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/last_updated_placeholder"
            android:textSize="12sp"
            android:textColor="@color/hermes_text_secondary"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:contentDescription="@string/cd_info_icon"
            android:accessibilityLiveRegion="polite" />

        <!-- Overall Statistics Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/cd_statistics_card"
            android:importantForAccessibility="yes"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/overall_statistics_title"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/hermes_text_primary"
                    android:layout_marginBottom="12dp"
                    android:accessibilityHeading="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalReceived"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_count"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary"
                            android:contentDescription="@string/cd_statistics_card" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/received_label"
                            android:textSize="12sp"
                            android:textColor="@color/hermes_text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalForwarded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_count"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            android:contentDescription="@string/cd_statistics_card" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/forwarded_label"
                            android:textSize="12sp"
                            android:textColor="@color/hermes_text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalErrors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_count"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_red_dark"
                            android:contentDescription="@string/cd_error_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/errors_label"
                            android:textSize="12sp"
                            android:textColor="@color/hermes_text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTotalBlocked"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_count"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_orange_dark"
                            android:contentDescription="@string/cd_blocked_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/blocked_label"
                            android:textSize="12sp"
                            android:textColor="@color/hermes_text_secondary" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Success Rate Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/success_rate_label"
                            android:textSize="14sp"
                            android:textColor="@color/hermes_text_primary" />

                        <TextView
                            android:id="@+id/tvSuccessRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_percent"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/holo_green_dark"
                            android:contentDescription="@string/cd_success_icon" />

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/progressSuccessRate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:contentDescription="@string/cd_progress_bar"
                        android:importantForAccessibility="yes"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:max="100"
                        android:progress="0" />

                </LinearLayout>

                <!-- Additional Metrics -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/avg_processing_time_label"
                            android:textSize="12sp"
                            android:textColor="@color/hermes_text_secondary" />

                        <TextView
                            android:id="@+id/tvAvgProcessingTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_milliseconds"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/hermes_text_primary"
                            android:contentDescription="@string/cd_statistics_card" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_opens_label"
                            android:textSize="12sp"
                            android:textColor="@color/hermes_text_secondary" />

                        <TextView
                            android:id="@+id/tvAppOpens"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_count"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/hermes_text_primary"
                            android:contentDescription="@string/cd_statistics_card" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Most Common Error -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/most_common_error_label"
                        android:textSize="12sp"
                        android:textColor="@color/hermes_text_secondary" />

                    <TextView
                        android:id="@+id/tvMostCommonError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/none_label"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/hermes_text_primary"
                        android:contentDescription="@string/cd_error_icon" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Period Statistics -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/period_statistics_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/hermes_text_primary"
            android:layout_marginBottom="12dp"
            android:accessibilityHeading="true" />

        <!-- Today's Statistics -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardToday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/cd_statistics_card"
            android:importantForAccessibility="yes"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/today_label"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginBottom="8dp"
                    android:accessibilityHeading="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTodayReceived"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_count"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/received_label"
                            android:textSize="10sp"
                            android:textColor="@color/hermes_text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTodayForwarded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_count"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/forwarded_label"
                            android:textSize="10sp"
                            android:textColor="@color/hermes_text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTodaySuccessRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_percent"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/success_rate_label"
                            android:textSize="10sp"
                            android:textColor="@color/hermes_text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvTodayErrors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_count"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/errors_label"
                            android:textSize="10sp"
                            android:textColor="@color/hermes_text_secondary" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- This Week's Statistics -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardWeek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/cd_statistics_card"
            android:importantForAccessibility="yes"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/this_week_label"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_marginBottom="8dp"
                    android:accessibilityHeading="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvWeekReceived"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_count"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/received_label"
                            android:textSize="10sp"
                            android:textColor="@color/hermes_text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvWeekForwarded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_count"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/forwarded_label"
                            android:textSize="10sp"
                            android:textColor="@color/hermes_text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvWeekSuccessRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_percent"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/success_rate_label"
                            android:textSize="10sp"
                            android:textColor="@color/hermes_text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvWeekErrors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_count"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/errors_label"
                            android:textSize="10sp"
                            android:textColor="@color/hermes_text_secondary" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- This Month's Statistics -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMonth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/cd_statistics_card"
            android:importantForAccessibility="yes"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/this_month_label"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_purple"
                    android:layout_marginBottom="8dp"
                    android:accessibilityHeading="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvMonthReceived"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_count"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/received_label"
                            android:textSize="10sp"
                            android:textColor="@color/hermes_text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvMonthForwarded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_count"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/forwarded_label"
                            android:textSize="10sp"
                            android:textColor="@color/hermes_text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvMonthSuccessRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_percent"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/success_rate_label"
                            android:textSize="10sp"
                            android:textColor="@color/hermes_text_secondary" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvMonthErrors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/zero_count"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/errors_label"
                            android:textSize="10sp"
                            android:textColor="@color/hermes_text_secondary" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>