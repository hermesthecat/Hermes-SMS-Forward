<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/hermes_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/hermes_primary" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SIM Debug Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/hermes_text_primary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="This screen shows detailed SIM information for debugging purposes. Only available in debug builds."
                        android:textSize="14sp"
                        android:textColor="@color/hermes_text_secondary"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:id="@+id/tv_sim_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Loading SIM information..."
                        android:textSize="12sp"
                        android:fontFamily="monospace"
                        android:textColor="@color/hermes_text_primary"
                        android:background="@color/hermes_light_gray"
                        android:padding="12dp"
                        android:textIsSelectable="true"
                        android:scrollbars="vertical" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Debug Controls Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Debug Controls"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/hermes_text_primary"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_refresh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Refresh SIM Information"
                        android:textColor="@color/hermes_text_on_primary"
                        android:backgroundTint="@color/hermes_primary"
                        android:layout_marginBottom="8dp"
                        android:onClick="onRefreshClicked" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_test_sim_selection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Test SIM Selection Logic"
                        android:textColor="@color/hermes_primary"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:onClick="onTestSelectionClicked" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>