<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_rules_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/filter_rules_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/filter_rules_description"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/filter_rules_description" />


    <!-- Add New Filter Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/cd_statistics_card"
        android:importantForAccessibility="yes"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_new_filter"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="@string/filter_name_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFilterName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:contentDescription="@string/cd_info_icon"
                    android:importantForAccessibility="yes" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/filter_type_label"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerFilterType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:contentDescription="@string/filter_type_label"
                android:importantForAccessibility="yes" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:hint="@string/filter_pattern_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFilterPattern"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="3"
                    android:contentDescription="@string/filter_pattern_hint"
                    android:importantForAccessibility="yes" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/filter_action_label"
                android:textSize="14sp"
                android:layout_marginBottom="4dp" />

            <RadioGroup
                android:id="@+id/rgFilterAction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <RadioButton
                    android:id="@+id/rbActionAllow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/action_allow"
                    android:checked="true"
                    android:contentDescription="@string/action_allow"
                    android:importantForAccessibility="yes" />

                <RadioButton
                    android:id="@+id/rbActionBlock"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/action_block"
                    android:contentDescription="@string/action_block"
                    android:importantForAccessibility="yes" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/cbCaseSensitive"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/case_sensitive"
                    android:contentDescription="@string/cd_toggle_button"
                    android:importantForAccessibility="yes" />

                <CheckBox
                    android:id="@+id/cbRegex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/use_regex"
                    android:contentDescription="@string/cd_toggle_button"
                    android:importantForAccessibility="yes" />

                <CheckBox
                    android:id="@+id/cbEnabled"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enabled"
                    android:checked="true"
                    android:contentDescription="@string/cd_toggle_button"
                    android:importantForAccessibility="yes" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvValidationMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:contentDescription="@string/cd_validation_message"
                android:importantForAccessibility="yes" />

            <Button
                android:id="@+id/btnAddFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_filter"
                android:enabled="false"
                android:contentDescription="@string/cd_add_button"
                android:importantForAccessibility="yes" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Filter Rules List Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/existing_filters"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvEmptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_filters_configured"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        android:padding="24dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:contentDescription="@string/no_filters_configured" />

    <!-- RecyclerView for Filter Rules -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvFilterRules"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:contentDescription="@string/filter_rules_title"
        android:importantForAccessibility="yes" />

</LinearLayout>