<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutline">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header with name and status badges -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvDisplayName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?android:attr/textColorPrimary"
                android:text="Display Name" />

            <!-- Primary badge -->
            <TextView
                android:id="@+id/tvPrimaryBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="@string/target_primary_label"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/badge_primary"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:visibility="gone" />

            <!-- Disabled badge -->
            <TextView
                android:id="@+id/tvDisabledBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/target_disabled_label"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/badge_disabled"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Phone number -->
        <TextView
            android:id="@+id/tvPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginBottom="8dp"
            android:text="+905551234567" />

        <!-- Last used info -->
        <TextView
            android:id="@+id/tvLastUsed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorTertiary"
            android:layout_marginBottom="12dp"
            android:text="Son kullanım: 2 saat önce" />

        <!-- Action buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnSetPrimary"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/target_set_primary"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnToggleEnabled"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/target_toggle_enabled"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnDelete"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/target_delete"
                android:textSize="12sp"
                android:textColor="?attr/colorError" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>