<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/target_numbers_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="?android:attr/textColorPrimary"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/target_numbers_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/target_numbers_description"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/target_numbers_description" />

    <!-- Add New Target Section -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/cd_statistics_card"
        android:importantForAccessibility="yes"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_new_target"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:hintEnabled="true"
                android:hint="@string/phone_number_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNewPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:contentDescription="@string/cd_target_number_input"
                    android:importantForAccessibility="yes" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:hintEnabled="true"
                android:hint="@string/display_name_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNewDisplayName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:contentDescription="@string/cd_info_icon"
                    android:importantForAccessibility="yes" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <CheckBox
                    android:id="@+id/cbSetAsPrimary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/set_as_primary"
                    android:contentDescription="@string/cd_toggle_button"
                    android:importantForAccessibility="yes" />

                <CheckBox
                    android:id="@+id/cbEnabled"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/enabled"
                    android:checked="true"
                    android:contentDescription="@string/cd_toggle_button"
                    android:importantForAccessibility="yes" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvValidationMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                android:contentDescription="@string/cd_validation_message"
                android:importantForAccessibility="yes" />

            <Button
                android:id="@+id/btnAddTarget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/add_target_number"
                android:enabled="false"
                android:contentDescription="@string/cd_add_button"
                android:importantForAccessibility="yes" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Target Numbers List Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/existing_targets"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvEmptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_targets_configured"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:gravity="center"
        android:padding="24dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:contentDescription="@string/no_targets_configured" />

    <!-- RecyclerView for Target Numbers -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTargetNumbers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:contentDescription="@string/target_numbers_title"
        android:importantForAccessibility="yes" />

    <!-- Settings Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sending_mode"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerSendingMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/sending_mode"
            android:importantForAccessibility="yes" />

    </LinearLayout>

</LinearLayout>